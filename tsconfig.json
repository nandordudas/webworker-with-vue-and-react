{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/offscreencanvas",
      "vite/client",
      "vue/ref-macros"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}